@model IEnumerable<ProjetoValidacao.Web.Models.ContaViewModel>

@{
    ViewData["Title"] = "Home Page";
}


<div id="top" class="row">
    <div class="col-sm-3">
        <h2>Itens</h2>
    </div>
    <div class="col-sm-9">
        @Html.ActionLink("Novo Item", "Novo")
    </div>
</div>

<div id="list" class="row">
    <div class="table-responsive col-md-12">
        <table class="table table-striped" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", new { nome = item.Nome }, new { @class = "btn btn-warning btn-xs" })
                                @Html.ActionLink("Excluir", "Excluir", new { nome = item.Nome }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>